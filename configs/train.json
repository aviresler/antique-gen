{
  "exp": {
    "name": "cossloss_optim"
  },
  "data_loader": {
    "name": "default_generator",
    "data_dir_train": "data_loader/data/site_period_top_200/train",
    "data_dir_valid": "data_loader/data/site_period_top_200/valid",
    "num_of_classes": 200,
    "horizontal_flip": true,
    "fill_mode": "nearest",
    "zoom_range": 0.15,
    "width_shift_range": 0.15,
    "height_shift_range": 0.15,
    "rotation_range": 30,
    "is_use_cutOut": true,
    "class_mode": "sparse",
    "K": 4,
    "P": 6,
    "batch_size": 24,
    "is_sample_each_cls_once": false
  },
  "model":{
    "name": "cosloss.CosLosModel",
    "learning_rate": 0.001,
    "optimizer": "adam",
    "img_width": 299,
    "img_height": 299,
    "alpha": 0.25,
    "scale": 64,
    "loss": "cosface",
    "is_use_relu_on_embeddings": false,
    "embedding_dim": 200,
    "is_use_dummy_model": false
  },
  "trainer":{
    "name": "cosface.SimpleMnistModelTrainer",
    "num_epochs": 1,
    "learning_rate_values": [0.0001, 0.000001, 0.000001],
    "learning_rate_epoch_change": [3,9],
    "verbose_training": true
  },
  "callbacks":{
    "checkpoint_monitor": "val_loss",
    "checkpoint_mode": "min",
    "checkpoint_save_best_only": true,
    "checkpoint_save_weights_only": true,
    "checkpoint_verbose": true,
    "tensorboard_write_graph": true,
    "is_save_model": true
  }
}

