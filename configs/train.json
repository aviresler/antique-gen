{
  "exp": {
    "name": "vgg_attention_bg_removed"
  },
  "data_loader": {
    "data_dir_train": "data_loader/data/data_16_6/site_period_top_200_bg_removed/train",
    "data_dir_valid": "data_loader/data/data_16_6/site_period_top_200_bg_removed/valid",
    "info_line_below": "in triplet loss testing is done with 200 classes",
    "data_dir_train_test": "data_loader/data/data_16_6/site_period_top_200_bg_removed/train",
    "data_dir_valid_test": "data_loader/data/data_16_6/site_period_top_200_bg_removed/valid",
    "info_line_below1": "valid only for cosface loss",
    "num_of_classes": 200,
    "num_of_periods": 53,
    "num_of_sites": 120,
    "classes_info_csv_file": "data_loader/classes_top200.csv",
    "horizontal_flip": true,
    "fill_mode": "nearest",
    "zoom_range": 0.15,
    "width_shift_range": 0.15,
    "height_shift_range": 0.15,
    "rotation_range": 30,
    "is_use_cutOut": true,
    "class_mode": "sparse",
    "K": 4,
    "P": 6,
    "batch_size": 64,
    "is_sample_each_cls_once": "TRUE"
  },
  "model":{
    "optimizer": "adam",
    "info_line_below": "can be: vgg / vgg_attention/  inceptionResnetV2 / dummy",
    "type": "vgg_attention",
    "num_of_outputs": 3,
    "info_line_below2": "can be: cosface / softmax/  triplet ",
    "loss": "softmax",
    "is_use_relu_on_embeddings": false,
    "embedding_dim": 512,
    "pretraind_model": "experiments/2019-07-09/vgg_bg_removed_cos_face/checkpoints/vgg_bg_removed_cos_face.hdf5",
    "img_width": 224,
    "img_height": 224,
    "alpha": 0.25,
    "scale": 64,
    "margin": 0.2,
    "is_squared": false,
    "batch_type": "all",
    "weight_decay": 0.00001,
    "info line below 2": "relevant in cosface loss, when using 2 losses",
    "cosface_site_period_weight": 1.0,
    "cosface_period_weight": 0.0,
    "cosface_site_weight": 0.0,
    "is_batch_all_consider_only_200": true,
    "is_use_prior_weights": false,
    "classes_confusion_prior": "data_loader/class_prior_num_images.csv"
  },
  "trainer":{
    "num_epochs": 30,
    "learning_rate_values": [0.0001, 0.000001, 0.000001],
    "learning_rate_schedule_type": "ReduceLROnPlateau",
    "learning_rate": 2E-5,
    "lr_decrease_factor": 0.5,
    "learning_rate_epoch_change": [3,9],
    "verbose_training": true,
    "is_change_lr": true,
    "is_early_stop": true
  },
  "callbacks":{
    "checkpoint_monitor": "val_loss",
    "checkpoint_mode": "min",
    "checkpoint_save_best_only": true,
    "checkpoint_save_weights_only": true,
    "checkpoint_verbose": true,
    "tensorboard_write_graph": true,
    "is_save_model": false
  }
}

