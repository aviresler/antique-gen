{
  "exp": {
    "name": "test"
  },
  "data_loader": {
    "data_dir_train": "data_loader/data/data_no_background_16_6/train",
    "data_dir_valid": "data_loader/data/data_no_background_16_6/valid",
    "info_line_below": "in triplet loss testing is done with 200 classes",
    "data_dir_train_test": "data_loader/data/data_no_background_16_6/train",
    "data_dir_valid_test": "data_loader/data/data_no_background_16_6/valid",
    "info_line_below1": "valid only for cosface loss",
    "num_of_classes": 200,
    "num_of_periods": 53,
    "num_of_sites": 120,
    "classes_info_csv_file": "data_loader/classes_top200.csv",
    "horizontal_flip": true,
    "fill_mode": "nearest",
    "zoom_range": 0.15,
    "width_shift_range": 0.15,
    "height_shift_range": 0.15,
    "rotation_range": 30,
    "is_use_cutOut": false,
    "class_mode": "sparse",
    "K": 4,
    "P": 5,
    "batch_size": 2,
    "sampels_per_epcoh": 401,
    "is_sample_each_cls_once": "TRUE"
  },
  "model":{
    "optimizer": "adam",
    "info_line_below": "can be: vgg / vgg_attention/  inceptionResnetV2 / dummy / efficientNet / efficientNetSTN",
    "type": "efficientNet",
    "info_line_below3": "can be 1 or 2, only relevant when using STN",
    "STN_num_of_layers": 2,
    "LR_multiplier_stn": 0.5,
    "num_of_outputs": 2,
    "info_line_below2": "can be: cosface / softmax/  triplet ",
    "loss": "softmax",
    "is_use_relu_on_embeddings": false,
    "num_of_fc_at_net_end": 1,
    "embedding_dim": 1536,
    "pretraind_model": "None",
    "img_width": 300,
    "img_height": 300,
    "alpha": 0.25,
    "scale": 64,
    "margin": 0.2,
    "is_squared": false,
    "batch_type": "hard",
    "weight_decay": 3.5E-8,
    "info line below 2": "relevant in cosface loss, when using 2 losses",
    "cosface_site_period_weight": 1.0,
    "cosface_period_weight": 0.0,
    "cosface_site_weight": 0.0,
    "is_batch_all_consider_only_200": true,
    "is_use_prior_weights": false,
    "classes_confusion_prior": "data_loader/class_prior_num_images.csv"
  },
  "trainer":{
    "num_epochs": 50,
    "learning_rate_values": [3E-5, 3E-6, 3E-6],
    "info_line_below": "can be: ReduceLROnPlateau / LearningRateScheduler",
    "learning_rate_schedule_type": "ReduceLROnPlateau",
    "learning_rate":1E-4,
    "ReduceLROnPlateau_patience": 2,
    "learning_rate_decay": 0,
    "lr_decrease_factor": 0.13,
    "learning_rate_epoch_change": [6,10],
    "verbose_training": true,
    "is_change_lr": true,
    "is_early_stop": true,
    "EarlyStopping_patience": 5,
    "EarlyStopping_min_delta": 0.05
  },
  "callbacks":{
    "checkpoint_monitor": "val_loss",
    "checkpoint_mode": "min",
    "checkpoint_save_best_only": true,
    "checkpoint_save_weights_only": true,
    "checkpoint_verbose": true,
    "tensorboard_write_graph": true,
    "is_save_model": false
  }
}

