{
  "exp": {
    "name": "triplet_623_cls_0.000001_2_once"
  },
  "data_loader": {
    "name": "triplet_generator",
    "data_dir_train": "data_loader/data/old_site_period_none_unknown/site_period_623_cls_triplet/train",
    "data_dir_valid": "data_loader/data/old_site_period_none_unknown/site_period_623_cls_triplet/valid",
    "num_of_classes": 200,
    "horizontal_flip": true,
    "fill_mode": "nearest",
    "zoom_range": 0.15,
    "width_shift_range": 0.15,
    "height_shift_range": 0.15,
    "rotation_range": 30,
    "is_use_cutOut": false,
    "class_mode": "sparse",
    "is_use_relu_on_embeddings": true,
    "K": 4,
    "P": 4,
    "is_sample_each_cls_once": false
  },
  "model":{
    "name": "cosloss.CosLosModel",
    "learning_rate": 0.001,
    "optimizer": "adam",
    "img_width": 299,
    "img_height": 299,
    "alpha": 0.25,
    "scale": 64,
    "is_use_triplet_loss": true,
    "margin": 0.2,
    "is_squared": false,
    "embedding_dim": 200
  },
  "trainer":{
    "name": "cosface.SimpleMnistModelTrainer",
    "num_epochs": 30,
    "batch_size": 24,
    "learning_rate_values": [0.000001, 0.000001, 0.000001],
    "learning_rate_epoch_change": [4,9],
    "verbose_training": true
  },
  "callbacks":{
    "checkpoint_monitor": "val_loss",
    "checkpoint_mode": "min",
    "checkpoint_save_best_only": true,
   "checkpoint_save_weights_only": false,
    "checkpoint_verbose": true,
    "tensorboard_write_graph": true,
    "is_save_model": true
  }
}

